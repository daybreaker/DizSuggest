<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

	<title><%= content_for?(:title) ? yield(:title) : "Mouse Sourcing" %></title>
  
  <meta name="description" content="Helping come up with a better Disney">
	<meta name="author" content="Brad Huber">
	
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
	<link rel="shortcut icon" href="/favicon.ico">

  <%= stylesheet_link_tag "application","styles"%>
  <%= javascript_include_tag :defaults %>
	<!--[if IE]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
	<%= csrf_meta_tag %>
  <%= yield(:head) %>
  
</head>
<body>
<div id="wrapper"><!-- #wrapper -->

	<header><!-- header -->
		<h1><a href="#">MouseSourcing</a></h1>
		<h2>...dont put up a fence, build a new pathway</h2>
		<div id="user_nav">
      <% if user_signed_in? %>
        <%= image_tag current_user.photo %>
        <p id="user_info">
          <%= current_user.name %><br />
          <%= current_user.email %><br />
          <%= link_to "Log out", destroy_user_session_path %>
        </p>
      <% else %>
        <a href="/auth/facebook" class="auth_provider">
          <%= image_tag "facebook-connect.png", :alt => "Facebook" %>
        </a>
      <% end %>
    </div>
	</header><!-- end of header -->
	
	<nav><!-- top nav -->
		<div class="menu">
			<ul>
				<li><a href="/">Home</a></li>
				<li><a href="/pages/about">About</a></li>
				<li><a href="/user">Profile</a></li>
				<li><a href="/pages/contact">Contact Us</a></li>
			</ul>
		</div>
	</nav><!-- end of top nav -->
	
	<section id="main"><!-- #main content and sidebar area -->

		<div id="content_wrapper">
			<section id="content"><!-- #content -->
			
        		<% flash.each do |name, msg| %>
			        <%= content_tag :div, msg, :id => "flash_#{name}" %>
			      <% end %>
			      <%= yield %>
						
			</section><!-- end of #content -->
    </div>
	</section><!-- end of #main content and sidebar-->
	
	<footer>
		<section id="footer-area">

			<section id="footer-outer-block">
					<aside class="footer-segment">
							<h4>Friends</h4>
								<ul>
									<li><a href="#">one linkylink</a></li>
									<li><a href="#">two linkylinks</a></li>
									<li><a href="#">three linkylinks</a></li>
								</ul>
					</aside><!-- end of #first footer segment -->

					<aside class="footer-segment">
							<h4>Sponsors</h4>
				      <img src="http://placekitten.com/180/180" alt="" /><br /><br />

			        <h4>Connect With Us</h4>
				        <ul>
					        <li><a href="http://twitter.com/#!/MouseSourcing">Twitter</a></li>
					        <li><a href="#">Facebook</a></li>
					        <li><a href="#">LinkedIn</a></li>
					        <li><a href="#">Flickr</a></li>
				        </ul>
					</aside><!-- end of #second footer segment -->

					<aside class="footer-segment">
							<h4>Coolness</h4>
								<ul>
									<li><a href="#">one linkylink</a></li>
									<li><a href="#">two linkylinks</a></li>
									<li><a href="#">three linkylinks</a></li>
								</ul>
					</aside><!-- end of #third footer segment -->
					
					<aside class="footer-segment">
							<h4>Blahdyblah</h4>
								<p>&copy; 2010 <a href="#">yoursite.com</a> You know, and other stuff too.</p>
					</aside><!-- end of #fourth footer segment -->

			</section><!-- end of footer-outer-block -->

		</section><!-- end of footer-area -->
	</footer>
	
</div><!-- #wrapper -->

</body>
</html>
