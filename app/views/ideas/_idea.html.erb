<div class="idea">
  <h2><%= idea.subject %></h2>
  <p id="votes_<%= idea.id %>" class="votes"><span><%= idea.plusminus %> (<%= idea.votes_for %> <%= raw '<a href="javascript://" class="upvote">+</a>' if user_signed_in?%> / <%= idea.votes_against %> <%= raw '<a href="javascript://" class="downvote">-</a>' if user_signed_in?%>)
    <input type="hidden" class="idea" value="<%= idea.id %>" />
    <!-- @TODO: Find a better way to store the hidden inputs than inside the span -->
    <input type="hidden" class="page" value="index" /></span></p>
  <p class="description"><%= idea.description %></p>
  <p class="submitter"><%= idea.submitter.email %></p>
  <p class="view_idea"><%= link_to "View", idea_path(idea) %></p>
  <p class="owner_actions">
      <%= link_to "Edit", edit_idea_path(idea) if (current_user && idea.submitter.id == current_user.id) %>
      <%= link_to "Destroy", idea, :confirm => 'Are you sure?', :method => :delete  if (current_user && idea.submitter.id == current_user.id) %>
  </p>
</div>
