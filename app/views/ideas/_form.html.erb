<%= form_for @idea do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :submitter_id %><br />
    <%= f.text_field :submitter_id %>
  </p>
  <p><%= f.submit %></p>
<% end %>
