<div class="comment">
  <%= comment.body %><%= link_to "+ reply", new_comment_idea_path(@idea, {:comment => comment.id}), {:class => 'reply'} %>
  <% if comment.has_children? %>
    <div class="comment_children">
      <% comment.children.each do |x| %>
        <%= render x %>
      <% end %>
    </div>  
  <% end %>
</div>
